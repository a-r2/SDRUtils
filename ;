import sys

import numpy as np
from PIL import Image, ImageEnhance

import matplotlib.pyplot as plt

SYS_ARGV = sys.argv
assert len(SYS_ARGV) < 3, "Only one image at a time"
IMG_PATH = SYS_ARGV[1]
img      = Image.open(IMG_PATH)
img      = img.convert("1")
img_arr  = np.asarray(img)

img_X, img_Y = img_arr.shape[0], img_arr.shape[1]
x            = np.arange(img_X)
y            = np.arange(img_Y)
print(x.shape)
X = np.tile(x,(img_Y,1)).T
print(X.shape)
Y = np.tile(y,(img_Y,1))
plt.contour(X, Y, img_arr, "k.")
plt.show()
